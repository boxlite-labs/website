---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pageDescription = "BoxLite pricing plans for secure AI agent sandboxing. Free open-source tier for individuals, startup plans for growing teams, and enterprise solutions with dedicated support.";

const pricing = [
  {
    name: "Open Source",
    price: "Free",
    popular: false,
    features: [
      "Full BoxLite runtime",
      "Python, Rust, C SDKs",
      "OCI image support",
      "Community Discord support",
      "GitHub Issues support",
      "Apache 2.0 License",
    ],
    button: {
      text: "Get Started",
      link: "https://github.com/boxlite-labs/boxlite",
    },
  },
  {
    name: "Pro",
    price: "Coming Soon",
    popular: true,
    features: [
      "All Open Source features",
      "Priority support",
      "Extended documentation",
      "Private Discord channel",
      "Early access to features",
      "Technical consultation",
    ],
    button: {
      text: "Join Waitlist",
      link: "https://discord.gg/TW7jXHyX7s",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "All Pro features",
      "Dedicated support engineer",
      "Custom feature development",
      "SLA guarantees",
      "Security review assistance",
      "On-premise deployment help",
    ],
    button: {
      text: "Contact Us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing" description={pageDescription}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
