---
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const pageDescription = "Page not found. Explore BoxLite documentation, guides, and resources for secure AI agent sandboxing.";

const popularLinks = [
  { title: "Home", description: "Return to the BoxLite homepage", href: "/website", icon: "bx:bx-home" },
  { title: "FAQ", description: "Common questions about BoxLite", href: "/website/faq", icon: "bx:bx-help-circle" },
  { title: "AI Agent Sandboxing Guide", description: "Learn how to sandbox AI agents safely", href: "/website/guides/ai-agent-sandboxing", icon: "bx:bxs-book" },
  { title: "BoxLite vs Docker", description: "Compare isolation approaches", href: "/website/compare/docker", icon: "bx:bxl-docker" },
  { title: "GitHub", description: "View source code and documentation", href: "https://github.com/boxlite-labs/boxlite", icon: "bx:bxl-github" },
  { title: "Discord", description: "Join the community for help", href: "https://discord.gg/TW7jXHyX7s", icon: "bx:bxl-discord-alt" },
];
---

<Layout title="404 - Page Not Found" description={pageDescription} noindex={true} nofollow={true}>
  <Container>
    <div class="min-h-[calc(100vh-20rem)] flex items-center justify-center py-16">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Header -->
        <h1 class="text-8xl font-bold text-slate-200">404</h1>
        <h2 class="text-2xl font-bold text-gray-800 mt-4">Page Not Found</h2>
        <p class="text-lg mt-4 text-slate-600">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <!-- Search suggestion -->
        <div class="mt-8 p-4 bg-slate-50 rounded-lg">
          <p class="text-slate-600 text-sm">
            Looking for something specific? Try these popular pages:
          </p>
        </div>

        <!-- Popular Links Grid -->
        <div class="grid sm:grid-cols-2 gap-4 mt-8">
          {popularLinks.map((link) => (
            <a
              href={link.href}
              class="flex items-start gap-3 p-4 border border-slate-200 rounded-lg hover:border-indigo-300 hover:bg-slate-50 transition text-left"
              target={link.href.startsWith("http") ? "_blank" : undefined}
              rel={link.href.startsWith("http") ? "noopener" : undefined}
            >
              <div class="bg-slate-100 rounded-lg p-2 shrink-0">
                <Icon class="w-5 h-5 text-slate-600" name={link.icon} />
              </div>
              <div>
                <h3 class="font-medium text-gray-800">{link.title}</h3>
                <p class="text-sm text-slate-500 mt-1">{link.description}</p>
              </div>
            </a>
          ))}
        </div>

        <!-- Back button -->
        <div class="mt-12">
          <a
            href="/website"
            class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
          >
            <Icon class="w-5 h-5 mr-2" name="bx:bx-arrow-back" />
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
