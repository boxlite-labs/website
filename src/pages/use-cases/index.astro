---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import { Icon } from "astro-icon/components";

const useCases = [
  {
    title: "AI Agent Sandboxing",
    description: "Run AI-generated code safely in hardware-isolated environments. Give AI agents full Linux freedom while guaranteeing they cannot escape to the host system.",
    icon: "bx:bxs-zap",
    href: "/website/use-cases/ai-agents",
    features: ["Claude Computer Use", "GPT Code Interpreter", "AutoGPT", "AI Coding Assistants"]
  },
  {
    title: "Secure Code Execution",
    description: "Execute untrusted code from users or external sources in isolated micro-VMs. Perfect for online judges, coding platforms, and educational tools.",
    icon: "bx:bxs-terminal",
    href: "/website/use-cases/code-execution",
    features: ["Online Code Editors", "Coding Challenges", "Educational Platforms", "Code Playgrounds"]
  },
  {
    title: "Multi-Tenant Isolation",
    description: "Isolate customer workloads with hardware-level boundaries. Each tenant runs in their own micro-VM, preventing cross-tenant access.",
    icon: "bx:bxs-shield",
    href: "/website/use-cases/multi-tenant",
    features: ["SaaS Platforms", "Hosting Providers", "Enterprise Applications", "Compliance Requirements"]
  },
  {
    title: "Browser Automation",
    description: "Run browser automation tasks in isolated sandboxes. Safely scrape websites, run tests, and automate web interactions without risk.",
    icon: "bx:bxs-devices",
    href: "/website/use-cases/browser-automation",
    features: ["Web Scraping", "E2E Testing", "Screenshot Services", "Headless Browsers"]
  },
  {
    title: "Desktop Automation",
    description: "Automate desktop interactions in isolated environments. Take screenshots, control mouse and keyboard, and test GUI applications safely.",
    icon: "bx:bxs-package",
    href: "/website/use-cases/desktop-automation",
    features: ["GUI Testing", "RPA Workflows", "Screenshot Capture", "Application Testing"]
  },
  {
    title: "Development Environments",
    description: "Create consistent, isolated development environments without Docker Desktop. Run Linux tools on macOS with native Apple Silicon performance.",
    icon: "bx:bxl-docker",
    href: "/website/use-cases/development",
    features: ["Local Development", "CI/CD Pipelines", "Build Environments", "Testing Sandboxes"]
  }
];

const pageDescription = "BoxLite use cases: AI agent sandboxing, secure code execution, multi-tenant isolation, browser automation, and more. Learn how to use BoxLite for your specific needs.";
---

<Layout title="Use Cases" description={pageDescription}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Use Cases</Fragment>
      <Fragment slot="desc">
        Discover how BoxLite solves real-world sandboxing challenges
      </Fragment>
    </Sectionhead>

    <div class="max-w-5xl mx-auto mt-16">
      <!-- TL;DR -->
      <div class="bg-slate-50 rounded-lg p-6 mb-12">
        <h2 class="font-bold text-xl text-gray-800 mb-3">TL;DR</h2>
        <p class="text-slate-600">
          BoxLite provides hardware-isolated micro-VMs for any workload that requires strong isolation.
          Common use cases include <strong>AI agent sandboxing</strong> (running LLM-generated code safely),
          <strong>secure code execution</strong> (online judges, playgrounds), and <strong>multi-tenant isolation</strong>
          (customer workload separation). Unlike containers, BoxLite's VM boundary prevents escape attacks.
        </p>
      </div>

      <!-- Use Cases Grid -->
      <div class="grid md:grid-cols-2 gap-8">
        {useCases.map((useCase) => (
          <a
            href={useCase.href}
            class="block border border-slate-200 rounded-lg p-6 hover:border-indigo-300 hover:shadow-md transition"
          >
            <div class="flex items-start gap-4">
              <div class="bg-indigo-100 rounded-lg p-3 shrink-0">
                <Icon class="w-6 h-6 text-indigo-600" name={useCase.icon} />
              </div>
              <div>
                <h3 class="font-semibold text-xl text-gray-800">
                  {useCase.title}
                </h3>
                <p class="text-slate-600 mt-2">{useCase.description}</p>
                <div class="flex flex-wrap gap-2 mt-4">
                  {useCase.features.map((feature) => (
                    <span class="px-2 py-1 text-xs bg-slate-100 text-slate-600 rounded">
                      {feature}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Related Resources -->
      <div class="mt-16 border-t border-slate-200 pt-12">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Related Resources</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <a href="/website/guides/ai-agent-sandboxing" class="p-6 border border-slate-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition">
            <h3 class="font-semibold text-lg text-gray-800 mb-2">AI Agent Sandboxing Guide</h3>
            <p class="text-sm text-slate-600">Step-by-step guide to implementing AI agent sandboxing.</p>
          </a>
          <a href="/website/compare" class="p-6 border border-slate-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition">
            <h3 class="font-semibold text-lg text-gray-800 mb-2">Compare Solutions</h3>
            <p class="text-sm text-slate-600">See how BoxLite compares to Docker, Firecracker, and gVisor.</p>
          </a>
          <a href="/website/faq" class="p-6 border border-slate-200 rounded-lg hover:border-indigo-300 hover:shadow-md transition">
            <h3 class="font-semibold text-lg text-gray-800 mb-2">FAQ</h3>
            <p class="text-sm text-slate-600">Common questions about BoxLite features and capabilities.</p>
          </a>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-16 text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Have a different use case?</h2>
        <p class="text-slate-600 mb-6">
          BoxLite is flexible and can be adapted for many sandboxing scenarios.
          Join our Discord to discuss your specific requirements.
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
          <a
            href="https://discord.gg/TW7jXHyX7s"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
          >
            Join Discord
          </a>
          <a
            href="https://github.com/boxlite-labs/boxlite-python-examples"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center px-6 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition"
          >
            View Examples
          </a>
        </div>
      </div>
    </div>
  </Container>
</Layout>
